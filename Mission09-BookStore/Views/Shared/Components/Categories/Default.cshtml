@{
}

@model IEnumerable<string>

<div class="gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" class="btn btn-outline-secondary">Home</a>
    <br />

    <!-- Categories are listed using a for loop this is for the index page -->
    @foreach (string c in Model)
    {
        <a class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum="1">@c</a>
        <br />
    }
</div>