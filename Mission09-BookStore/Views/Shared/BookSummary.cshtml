@{
}

@model Books

<!--Here is a card for each books that shows the books attributes-->
<div class="card card-outline-primary">
    <div class="bg-faded p-1">
        <h4>@Model.Title</h4>
        <h5>
            Author: @Model.Author
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>$@Model.Price.ToString()</small>
            </span>
        </h5>
    </div>
    <div class="card-text p-1">Publisher: @Model.Publisher <br />ISBN: @Model.Isbn <br />Category: @Model.Category <br />Page Count: @Model.PageCount</div>
    <form method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Buy</button>
        </span>
    </form>
</div>

